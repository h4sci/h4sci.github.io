---
const { imagePath, heading, description, videoLink = [] } = Astro.props;
// Create the video link elements as HTML strings in the frontmatter
const videoLinkElements = videoLink
  .map(
    (link) =>
      `<p class="flex items-center space-x-2 mb-0">
      <img src="youtube_light.svg" width="26" class="block dark:hidden flex-shrink-0"></img>
      <img src="youtube_dark.svg" width="26" class="hidden dark:block flex-shrink-0"></img>
      <a class="text-gray-400 dark:text-gray-500" href="${link.url}">${link.title}</a>
    </p>`
  )
  .join("");
---

<div
  class="p-[calc(var(--card-padding)-1px)] rounded-xl bg-white dark:bg-[--card-dark-bg] flex flex-col h-full shadow-lg"
>
  <div>
    <img src={imagePath} loading="lazy" />
  </div>
  <div class="mt-6 space-y-2">
    <h3 class="text-gray-950 dark:text-white text-lg font-medium">{heading}</h3>
    <p class="text-gray-600 dark:text-gray-400">{description}</p>
    {videoLink.length > 0 && <Fragment set:html={videoLinkElements} />}
  </div>
</div>
